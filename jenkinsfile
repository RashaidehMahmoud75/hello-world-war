pipeline {
   agent any
   tools {
        maven 'MAVEN'
        jdk 'JAVA_HOME'
    }
    stages {
        stage ('Clone') {
            steps {
                git branch: 'master', url: "https://github.com/RashaidehMahmoud75/hello-world-war.git"
            }
        }
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                '''
            }
        }
        stage ('Build') {
            steps {
                sh 'mvn -Dmaven.test.failure.ignore=true install' 
            }
            post {
                success {
                    junit 'target/surefire-reports/**/*.xml' 
                }
            }
        }
}

}
