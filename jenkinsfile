pipeline {
   agent any
   tools {
        maven 'MAVEN'
        jdk 'JAVA_HOME'
    }
    stages {
        stage ('Clone') {
            steps {
                git branch: 'master', url: "https://github.com/RashaidehMahmoud75/hello-world-war.git"
            }
        }
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                '''
            }
        }
        stage ('Build') {
            steps {
                sh ''' 
                mvn -Dmaven.test.failure.ignore=true install
                cp /var/lib/jenkins/.m2/repository/com/efsavage/hello-world-war/1.0.0/hello-world-war-1.0.0.war /home/ubuntu/artifacts
                '''
            }
            
        }
      stage ('Use Ansible') {  
       wrap([$class: 'AnsiColorBuildWrapper', colorMapName: "xterm"]) {
        ansiblePlaybook(
            playbook: 'mail.yml',
            inventory: 'hosts',
            colorized: true
            )
    }
      
      }
      
}

}
