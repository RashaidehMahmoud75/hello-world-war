pipeline {
   agent any
   tools {
        maven 'MAVEN'
        jdk 'JAVA_HOME'
    }
    stages {
        stage ('Clone') {
            steps {
                git branch: 'master', url: "https://github.com/RashaidehMahmoud75/hello-world-war.git"
            }
        }
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                '''
            }
        }
        stage ('Build') {
            steps {
                sh ''' 
                mvn -Dmaven.test.failure.ignore=true install
                cp /var/lib/jenkins/.m2/repository/com/efsavage/hello-world-war/1.0.0/hello-world-war-1.0.0.war /home/ubuntu/artifacts
                '''
            }
            }
        stage ('Deploy to production')

node {
    wrap([$class: 'AnsiColorBuildWrapper', colorMapName: "xterm"]) {
        ansiblePlaybook(
            playbook: 'webserver.yml',
            inventory: 'inventory.ini',
            credentialsId: '96b3fe82-e6a4-45eb-9e8d-0a512cba5a9c',
            colorized: true
            )
    }
}       
}

}
